<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/text_I_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_Coal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-87dp"
        android:text="@string/title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_Poor"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@id/text_I_am"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-76dp"
        android:text="@string/Poor"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_Coal"
        android:layout_width="wrap_content"
        android:layout_height="406dp"
        app:srcCompat="@drawable/coal" />
</RelativeLayout>
